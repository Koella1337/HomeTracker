<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.hometracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.GroupSelectionActivity"
            android:label="@string/group_selection_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app.GroupActivity" />
        <activity android:name=".database.DatabaseActivity" />
        <activity android:name=".qrcode.QRCodeMainActivity" />
        <activity android:name=".qrcode.GeneratorActivity" />
        <activity android:name=".qrcode.ReaderActivity" />
        <activity android:name=".app.ShelfSelectionActivity" />
        <activity android:name=".app.ShelfActivity" />
        <activity android:name=".app.ClickableImageTestActivity" />
    </application>

</manifest>